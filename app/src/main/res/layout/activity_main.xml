<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity"
    android:background="#03A9F4">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un numero entero (N)"
        android:textSize="22dp"
        android:id="@+id/campo1"
        android:layout_marginBottom="30dp"
        android:textColor="#FFFF"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa un numero entero (Mayor a N)"
        android:textSize="22dp"
        android:id="@+id/campo2"
        android:textColor="#FFFF"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Numeros"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/botonGenerar"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir archivo"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:id="@+id/botonmostrar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/campoNumeros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="#FFF"/>
    </ScrollView>

</LinearLayout>